{
  "name": "microarcade-tma",
  "version": "1.0.0",
  "description": "Telegram Mini App with quick casual games",
  "main": "index.html",
  "scripts": {
    "start": "npx serve .",
    "build": "npm run minify",
    "minify": "npx html-minifier-terser --input-dir . --output-dir dist --file-ext html --minify-css --minify-js --remove-comments --collapse-whitespace",
    "dev": "npx live-server --port=3000 --open=/index.html",
    "deploy": "npm run build && npx gh-pages -d dist"
  },
  "keywords": [
    "telegram",
    "mini-app",
    "games",
    "casual",
    "mobile"
  ],
  "author": "MicroArcade Team",
  "license": "MIT",
  "devDependencies": {
    "html-minifier-terser": "^7.2.0",
    "live-server": "^1.2.2",
    "serve": "^14.2.1",
    "gh-pages": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/microarcade-tma.git"
  },
  "homepage": "https://yourusername.github.io/microarcade-tma"
}
